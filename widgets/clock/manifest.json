{
  "name": "Time",
  "description": "Shows real-time clock with current date",
  "pinnable": true,
  "size": {
    "min": {
      "width": 2,
      "height": 2
    },
    "default": {
      "width": 3,
      "height": 3
    },
    "max": {
      "width": 6,
      "height": 4
    }
  },
  "settings": {
    "showTitlebar": {
      "type": "boolean",
      "label": "Show Title Bar",
      "default": true,
      "description": "Display or hide the widget title bar"
    },
    "format24Hour": {
      "type": "boolean",
      "label": "24-Hour Format",
      "default": false,
      "description": "Toggle between 12-hour and 24-hour time format"
    },
    "showSeconds": {
      "type": "boolean",
      "label": "Show Seconds",
      "default": true,
      "description": "Display seconds in the time"
    }
  }
}
